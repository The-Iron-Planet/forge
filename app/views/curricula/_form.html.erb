<div class="container-fluid">
  <div class="row">
    <div class="row col-med-4"></div>
    <div class="row col-med-4">

      <%= form_for(@curriculum) do |f| %>
      <% if @curriculum.errors.any? %>
      <div id="error_explanation">
        <p class="form-val"><%= pluralize(@curriculum.errors.count, "error") %>
          prohibited this curriculum from being saved:</p>

        <ul class="error">
          <% @curriculum.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
    </div>
    <div class="row col-med-4"></div>

  <div class="row">
    <div class="row col-med-4"></div>
    <div class="row col-med-4">
      <div class="field">
        <%= f.label "Full Course Title" ,:class => "input-label"%><br>
        <%= f.text_field :name,  :class => "input-field" %>
      </div>
      <div class="field">
        <%= f.label :"Abbreviated Title", :class => "input-label" %>
        <%= f.text_field :nickname,  :class => "input-field" %>
      </div>
    </div>
    <div class="row col-med-4">
      <div class="row">

        <div class="actions">
          <%= f.submit "Create Curriculum", :class=> "btn", :value => 'Submit' %>
        </div>
        <% end %>
      </div>
    </div>
</div>
