<div class="well" id="new-job-form">
  <div class="row">
    <div class="col-med-12">
      <%= form_for(@job_post) do |f| %>
        <div class="row form-val">
          <%= render "shared/error_messages", :target => @job_post %>
        </div>
          <div class="col-md-12 field">
            <div class="job-post-list">
              <div class="field">
                <%= f.label :title, :class => "input-label" %><br>
                <%= f.text_field :title, :class => "input-field" %>
              </div>
              <!-- <div class="field">
                <%= f.label :description, :class => "input-label" %><br>
                <%= f.text_area :description, :class => "description" %>
              </div> -->
              <div class="field">
                <%= f.label :company_name, :class => "input-label" %><br>
                <%= f.text_field :company_name, :class => "input-field"%>
              </div>
              <div class="field">
                <%= f.label :location, :class => "input-label" %><br>
                <%= f.text_field :city, :class => "input-field" %>
              </div>
              <div class="field">
                <%= f.label :website, "Link to job description", :class => "input-label" %><br>
                <%= f.text_field :website, :class => "input-field" %>
              </div>
              <!-- <div class="field">
                <%= f.label :state, :class => "input-label" %><br>
                <%= f.select :state, options_for_select(us_states, @job_post.state), :include_blank => true, :class => "input-field" %>
              </div> -->
            </div>
            <div class="job-post-list2">
              <div class="form"
              <div class="field">
                <%= f.label :curriculum_id, "Which students would be the best fit for the position?", :class => "input-label" %><br>
                <%= f.collection_select(:curriculum_id, Curriculum.all, :id, :name, {include_blank: true},
                    :class=>"input-field dropdown") %>
              </div>
                <div class="field">
                  <%= f.label :experience_desired, :class => "input-label input-label" %><br>
                  <span class="profile-details" style="color: #727d84;">
                    Junior <%= f.radio_button :experience_desired, "Junior Developer" , :class=>" radio-answer"%>
                  </span>
                  <span class="profile-details" style="color: #727d84;">
                    Mid-Level <%= f.radio_button :experience_desired, "Mid-Level", :class=>"radio-answer" %>
                  </span>
                  <span class="profile-details" style="color: #727d84;">
                    Senior <%= f.radio_button :experience_desired, "Senior Developer", :class=>"radio-answer" %>
                  </span>
                </div>


              <% if @job_post.expires_on && @job_post.expires_on < Date.today %>
                <div class="field">
                  <%= f.label :expires_on, "This post expired on", :class => "input-label" %><br>
                  <%= f.date_field :expires_on, :class => "input-field-dropdown"%>
              <% elsif @job_post.expires_on && @job_post.expires_on > Date.today%>
                <div class="field">
                  <%= f.label :expires_on, "This post will expire on", :class => "input-label" %><br>
                  <%= f.date_field :expires_on, :class => "input-field-dropdown" %>
                </div>
              <% end %>
              <% if @job_post.active != nil %>
                <div class="field">
                  <%= f.label :active, "Is this Job Post active?", :class => "input-label" %><br>
                  <span class="profile-details" style="color: #727d84;">
                    Yes<%= f.radio_button :active, true,:class=>"radio-answer"%>
                  </span>
                  <span class="profile-details" style="color: #727d84;">
                    No<%= f.radio_button :active, false %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
          <div class="actions float-right" id="save-job-post">
            <%= f.submit :class=> "btn ctr-btn", value: "Save Job Post" %>
          </div>
        </div>
      <% end %>
    </div>
</div>
</div>
</div>
