<%= form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h4 class="form-val"><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h4>

      <ul class="error">
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, :class => "input-label" %><br>
    <%= f.text_field :name, :class => "input-field"  %>
  </div>
  <div class="field">
    <%= f.label :city, :class => "input-label" %><br>
    <%= f.text_field :city, :class => "input-field" %>
  </div>
  <div class="field">
    <%= f.label :state, :class => "input-label" %><br>
    <%= f.select :state, options_for_select(us_states, @company.state), :include_blank => true, :class => "input-field" %>
  </div>
  <div class="field">
    <%= f.label :website, :class => "input-label" %><br>
    <%= f.text_field :website, :class => "input-field" %>
  </div>
  <div class="actions">
    <%= f.submit "Add New Company", :class=> "btn" %>
  </div>
<% end %>
