<!-- <div class="container"> -->
<div class="container-fluid ">
  <div class="row">
    <div class="col-md-2">
      <div class="detail-event-img">
        <% if @event.uploaded_file_file_name.nil? %>
        <div>
          <%= image_tag "event_default.png", size: "100x100", :class=>"default-img" %>
        </div>
            <% else %>
        <div>
          <%= image_tag @event.uploaded_file(:thumb) %>
        </div>
            <% end %>
      </div>
      <div class="thumbnail-event-img">
          <% if @event.user.uploaded_file_file_name.nil? %>
        <div>
          <%=link_to image_tag("default_pic.png", size: "50x50"), "users/#{@event.user_id}" %>
        </div>
          <% else %>
        <div>
          <%=link_to image_tag(@event.user.uploaded_file(:small)),"users/#{@event.user_id}"  %>
        </div>
        <% end %>
      </div>
    </div >

    <div class="col-md-6">
      <div class="event-detail-page">

        <h2 class="event-page-heading"><%= @event.title %></h2>
        <ul class="indiv-event-details">
          <li class="bold-sans-serif">
            <%= @event.event_date %></li>
          <li class="bold">
            <%= @event.event_time %></li>
          <li>Campus:
            <%= @event.campus.long_name %></li>
          <li class="event-link">Website:
            <%= @event.website %></li>
          <li class="event-description">
            <%= @event.description %></li>
        </ul>

      </div>

      <div class="event-details-edit-delete">
        <%= link_to '<i class="glyphicon glyphicon-pencil" title="Edit"></i>'.html_safe,
            edit_event_path(@event) if @event.user_id == current_user.id %>
        <%= link_to '<i class="glyphicon glyphicon-remove" title="Delete Event"></i>'.html_safe,
            @event, method: :delete, data: { confirm: 'Are you sure?' } if @event.user_id == current_user.id %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="chat-column">
        <%= render partial: 'comments/comments', locals: {commentable: @event} %>
        <%= render partial: 'comments/form', locals: {commentable: @event, comment: @comment} %>
      </div>
    </div><!-- close chat column -->
  </div><!-- close row -->
</div><!-- fluid container closer -->
