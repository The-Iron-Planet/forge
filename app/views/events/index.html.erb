    <div class="row">
      <div class="col-md-12 event-list-heading">
        <div class="search-box col-med-12 well">
            <%= form_tag search_events_path, remote: true do %>
              <%= text_field_tag "query", params[:query], class: "input-field general-search ", placeholder: "Search"%>
              <%= select_tag "campus_id", options_from_collection_for_select(Campus.all,
                :id, :long_name, params[:campus_id]), prompt: "Search by Campus",
                class: "search-reg search-boxes-bar-mid" %>
              <%= button_tag "", type: "submit", class: "search-button glyphicon glyphicon-search" %>
            <% end %>
        </div>
      </div>
      <br />
      <br />
      <br />

