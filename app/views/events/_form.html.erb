<div class="container-fluid">
  <div class="row">
    <div class="col-med-12">
<!-- this is the add new event form -->
      <%= form_for(@event) do |f| %>
      <% if @event.errors.any? %>
      <div id="error_explanation">
        <h4 class="form-val"><%= pluralize(@event.errors.count, "error") %>
          prohibited this event from being saved:</h4>

        <ul class="error">
          <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
    </div>
  </div>

  <div class="row">

<!-- <div class='input-group date' id='datetimepicker1' >
      <div class="field"> -->
      <div class="row">


  <div class="col-md-12 field event-img">
    <div>


      <%= f.label :uploaded_file, class: "uploaded" %>

      <%= f.file_field :uploaded_file, class: "uploaded choose"%>
      <!-- <span class="input-group-addon">
     <span  class="glyphicon glyphicon-calendar default-img"></span>
    </span> -->
</div>


  <div class="event-list">
    <div class="field">
      <%= f.label :happens_on, "Happens On", :class => "input-label" %><br>
      <%= f.datetime_select :happens_on, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :title, :class => "input-label" %><br>
      <%= f.text_field :title, :class => "input-field" %>
    </div>
    <div class="field">
      <%= f.label :location, :class => "input-label" %><br>
      <%= f.text_area :location, :class => "input-field" %>
    </div>
    <div class="field">
      <%= f.label :description, :class => "input-label" %><br>
      <%= f.text_area :description, :class => "description" %>
    </div>
    <div class="field">
      <%= f.label :website , :class => "input-label"%><br>
      <%= f.text_field :website, :class => "input-field" %>
    </div>
    <div class="field">
      <%= f.label :campus, :class => "input-label" %><br>
      <%= f.collection_select(:campus_id, Campus.all, :id, :long_name, {selected: current_user.campus_id},
          :class=>"input-field dropdown") %>
    </div>
    </div>
    <div class=" test">

    </div>
    </div>


    <div class="actions">
    <%= f.submit :class=> "btn", :value => 'Save Event'%>
    </div>
</div>
<% end %>
