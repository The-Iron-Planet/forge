
<div class = "container-fluid">
  <h2>Course Listing</h2>
  <div class = "row">
    <div class = "col-md-2"></div>
    <div class = "col-md-8">
      <div class = "table-responsive">
        <table class = "table table-condensed">
          <thead>
            <tr class="table-heading">
              <th>Started on</th>
              <th>Ended on</th>
              <th>Campus</th>
              <th>Curriculum</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.start_date %></td>
                <td><%= course.end_date %></td>
                <td><%= course.campus_short %></td>
                <td><%= course.curriculum.name %></td>
                <td><%= link_to "Edit", "mobile-friendly-page.html", "data-mfp-src" => "#edit-course#{course.id}", class: "open-popup-link edit-course" %>
                  <div id="edit-course<%="#{course.id}" %>" class="white-popup mfp-hide">
                  <h2>Edit Course</h2>
                  <%= render partial: 'edit_form', locals: { course: course } %>
                  </div>
                </td>
                <!--<td><%= link_to 'Edit', edit_course_path(course) %></td>-->

                <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <br>

      <a href="mobile-friendly-page.html" data-mfp-src="#new-course" class="open-popup-link new-campus">Add New Course</a>
      <div id="new-course" class="white-popup mfp-hide">
        <h2>Add New Course</h2>

        <%= render 'form' %>
      </div>
    </div>
    <div class = "col-md-2"></div>
  </div>

</div>
