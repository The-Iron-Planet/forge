
<div>
  <% if @user.uploaded_file_file_name.nil? %>
    <div>-----------------------</div>
    <div>Default Profile Pic</div>
    <div>-----------------------</div>
  <% else %>
    <div><%= image_tag @user.uploaded_file(:medium) %></div>
  <% end %>

  <div class="profile-page"><%= @user.full_name %></div>
  <div><%= @user.course.full_description if !@user.course.nil? %></div>
  <div class="input-label">Email Icon: <%= @user.email %></div>

    



  <div class="input-label">Location Icon: <%= @user.current_location %></div>
  <div class="input-label">Github Icon: <%= @user.github_profile %></div>
  <% if !@user.website.nil? %>
    <div class="input-label">Website: <%= @user.website %></div>
  <% end %>
  <% if !@user.blog.nil? %>
    <div>Blog: <%= @user.blog %></div>
  <% end %>
  <% if @user.hiring %>
    <div>Hiring: Yes</div>
  <% end %>
  <% if @user.looking %>
    <div>Looking: Yes</div>
  <% end %>

    <div>
      <%= link_to 'Edit Profile', edit_user_path(@user) if @user.id == current_user.id %>
      <%= link_to 'Change Password', edit_password_user_path(@user) if @user.id == current_user.id %>
      <%= link_to 'Alumni Directory', users_path %>
    </div>


  </div></br>
  </div>
