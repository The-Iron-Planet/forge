<div class = "container-fluid">
  <div class = "row">
    <div class = "col-md-3"></div>
    <div class = "col-md-6 profile">
      <% if @user.uploaded_file_file_name.nil? %>
        <div><%= image_tag "default_pic.png", size: "200x200" %></div>
      <% else %>
        <div><%= image_tag @user.uploaded_file(:medium) %></div>
      <% end %>

      </br>

      <div><%= @user.full_name %></div>
      <div><%= @user.tiy_relation %></div>
      <% unless @user.current_city.blank? || @user.current_state.blank? %>
        <div>Location: <%= @user.current_location %></div>
      <% end %>
      <div>Email Icon: <%= @user.email %></div>
      <% unless @user.github_profile.blank? %>
        <div>Github: <%= @user.github_profile %></div>
      <% end %>
      <% unless @user.website.blank? %>
        <div>Website: <%= @user.website %></div>
      <% end %>
      <% unless @user.blog.blank? %>
        <div>Blog: <%= @user.blog %></div>
      <% end %>
      <% if @user.hiring %>
        <div>Hiring: Yes</div>
      <% end %>
      <% if @user.looking %>
        <div>Looking: Yes</div>
      <% end %>
    </div>
    <div class = "col-md-3"></div>
  </div>

  <div class = "row">
    <h4 class = "profile-title"><%= "#{@user.full_name}'s" %> Work Experience</h1>
  </div>

  <div class = "row">
    <div class = "col-md-1"></div>
    <div class = "col-md-10">
      <div class = "table-responsive">
        <table class = "table table-condensed">
          <thead>
            <tr>
              <th>Company</th>
              <th>Location</th>
              <th>Title</th>
              <th>Started on</th>
              <th>Ended on</th>
            </tr>
          </thead>

          <tbody>
            <% @user.positions.ordered.each do |position| %>
              <tr>
                <td><%= position.company_name %></td>
                <td><%= position.city %>, <%= position.state %></td>
                <td><%= position.title %></td>
                <td><%= position.start_date if position.started_on%></td>
                <td><%= position.end_date if position.ended_on%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class = "col-md-1"></div>
  </div>

  <div class = "row">
    <div class = "links">
      <div class = "link1"><%= link_to 'My Events', my_events_path if @user.id == current_user.id %></div>
      <div class = "link1"><%= link_to 'Edit Profile', edit_user_path(@user) if @user.id == current_user.id %></div>
      <div class = "link1"><%= link_to 'Change Password', edit_password_user_path(@user) if @user.id == current_user.id %></div>
    </div>
  </div>


  </div></br>
  </div>
</div>
