
<div class = "container-fluid">
  <% if @user.uploaded_file_file_name.nil? %>
    <div><%= image_tag "default_pic.png", size: "200x200" %></div>
  <% else %>
    <div><%= image_tag @user.uploaded_file(:medium) %></div>
  <% end %>


  <div><%= @user.full_name %></div>
  <div><%= @user.course.full_description unless @user.course.blank? %></div>
  <% unless @user.current_city.blank? || @user.current_state.blank? %>
    <div>Current Location: <%= @user.current_location %></div>
  <% end %>
  <div>Email Address: <%= @user.email %></div>
  <% unless @user.github_profile.blank? %>
    <div>Github: <%= @user.github_profile %></div>
  <% end %>
  <% unless @user.website.blank? %>
    <div>Website: <%= @user.website %></div>
  <% end %>
  <% unless @user.blog.blank? %>
    <div>Blog: <%= @user.blog %></div>
  <% end %>
  <% if @user.hiring %>
    <div>Hiring: Yes</div>
  <% end %>
  <% if @user.looking %>
    <div>Looking: Yes</div>
  <% end %>

  <div>
    <%= link_to 'Edit Profile', edit_user_path(@user) if @user.id == current_user.id %>
    <%= link_to 'Change Password', edit_password_user_path(@user) if @user.id == current_user.id %>
    <%= link_to 'My Events', events_path if @user.id == current_user.id %>
  </div>

  <h4 class = "work-experience"><%= "#{@user.full_name}'s" %> Work Experience</h1>

  <table class = "table">
    <thead>
      <tr>
        <th>Company</th>
        <th>Title</th>
        <th>Description</th>
        <th>Started on</th>
        <th>Ended on</th>
        <th>Current</th>
      </tr>
    </thead>

    <tbody>
      <% @user.positions.each do |position| %>
        <tr>

          <td><%= position.company.name_and_location %></td>
          <td><%= position.title %></td>
          <td><%= position.description %></td>
          <td><%= position.started_on %></td>
          <td><%= position.ended_on %></td>
          <td><%= position.current %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div></br>
  </div>
