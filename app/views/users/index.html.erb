<div class = "container">

  <h1>Alumni Directory</h1>

  <%= link_to 'New User', new_user_path if current_user.is_cd%>
  <%= link_to 'Campuses', campuses_path if current_user.is_cd%>
  <%= link_to 'Curricula', curricula_path if current_user.is_cd%>
  <%= link_to 'Courses', courses_path if current_user.is_cd%>

  <div class="search-bar">
    <input type="text" class="search" placeholder="search icon"/>
      <button type="button" class="search-button" placeholder="search icon">icon</button>
  </div>

<% @users.each_slice(3) do |slice| -%>
  <div class="row row-centered">
    <% slice.each do |user| %>
        <div class = "col-md-1"></div>
         <div class = "col-md-3">
             <% if user.uploaded_file_file_name.nil? %>
                <div>-----------------------</div>
                <div>Default Profile Pic</div>
                <div>-----------------------</div>
             <% else %>
                <div><%= image_tag user.uploaded_file(:square) %></div>
             <% end %>

            <div><%= user.full_name %></div>
            <span class="icon-mail"><a href="mailto:<%= user.email %>"></a></span>
            <div><%= user.current_location %></div>
            <a href="<%= user.github_profile %>" target="_blank"><span class="icon-github"></span></a>
            <!--<div>Github Icon: <%= user.github_profile %></div>-->
               <% if !user.website.nil? %>
            <a href="<%= user.website %>" target="_blank"><span class="icon-github"></span></a>
              <% end %>
              <% if !user.blog.nil? %>
            <div>Blog: <%= user.blog %></div>
              <% end %>
              <% if user.hiring %>
            <div>Hiring: Yes</div>
              <% end %>
              <% if user.looking %>
            <div>Looking: Yes</div>
            <% end %>
          <div><%= link_to 'View Profile', user %></div>
         </div>
     <% end %>

   </div>
<% end -%>
 </div>

 <br>

  <%= link_to 'New User', new_user_path %>
