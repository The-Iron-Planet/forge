<div class = "container">

  <h2>Alumni Directory</h2>

  <%= link_to 'New User', new_user_path if current_user.is_cd%>
  <%= link_to 'Courses', courses_path if current_user.is_cd%>

  <div>
    <input type="text" class="search" placeholder="Search..."/>
      <button type="search" class="glyphicon glyphicon-search search-button"></button>
  </div>

<% @users.each_slice(3) do |slice| -%>
  <div class="row row-centered">
    <% slice.each do |user| %>
        <div class = "col-md-1"></div>
         <div class = "col-md-3 profile-content">
             <% if user.uploaded_file_file_name.nil? %>
              <div><%= image_tag "default_pic.png", size: "200x200" %></div>
             <% else %>
              <div><%= image_tag user.uploaded_file(:square) %></div>
             <% end %>


            <h4><%= user.full_name %></h4>
            <br>
            <div><%= user.course.full_description unless user.course.blank? %></div>
            <div><%= user.current_location %></div>
            <br>
            <button type="button" class="ellipse" data-toggle="collapse"
             data-target=".collapse">...
            </button>
            <div id="collapse" class="collapse">more info here that might be interesting
            </div></br>
            <div class="icon-box">
            <a href="mailto:<%= user.email %>" target="_blank"><span class="user.email"></span></a>
            <span class="icon-mail icon"><a href="mailto:<%= user.email %>"></a></span>
              <% unless user.github_profile.blank? %>
                <a href="<%= user.github_profile %>" target="_blank"><span class="icon-github icon "></span></a>

              <% end %>
              <% unless user.website.blank? %>
                <a href="<%= user.website %>" target="_blank"><span class="icon-wordpress-alt icon icon"></span></a>
              <% end %>
              <% unless user.blog.blank? %>
                <a href="<%= user.blog %>" target="_blank"><span class="icon-blogger icon"></span></a>

              <% end %>
              </div>
            </div>
              <% if user.hiring %>
                <div>Hiring: Yes</div>
              <% end %>
              <% if user.looking %>
                <div>Looking: Yes</div>

              <% end %>
          <div><%= link_to 'View Profile', user %></div>

         </div>
     <% end %>

   </div>
<% end -%>
 </div>
