<div class="container-fluid form-bk">
  <div class="row form-val">
    <%= form_for @user, html: {multipart: true} do |f| %>
    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h4 class="form-val"><%= pluralize(@user.errors.count, "error") %>
        prohibited this user from being saved:</h4>

      <ul class="error">
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  </div>

  <div class="row new-user-form">
    <div class="col-xs-1"></div>
    <div class="col-md-3">
        <div class="field">
          <%= f.label :first_name, :class => "input-label" %>
          <%= f.text_field :first_name, :class => "input-field" %>
        </div>
        <div class="field">
          <%= f.label :last_name, :class => "input-label" %>
          <%= f.text_field :last_name, :class => "input-field" %>
        </div>
        <div class="field">
          <%= f.label :email, :class => "input-label" %>
          <%= f.text_field :email, :class => "input-field" %>
        </div>
        <div class="field">
          <%= f.label :current_city, :class => "input-label" %>
          <%= f.text_field :current_city, :class => "input-field" %>
        </div>
        <div class="field">
          <%= f.label :current_state, :class => "input-label" %>
          <%= f.select :current_state, options_for_select(us_states, @user.current_state), :include_blank => true, :class => "input-field" %>
        </div>
    </div>
    <div class="col-xs-1"></div>
    <div class="col-md-3 contact">
        <div class="field">
          <%= f.label "Github Username", :class => "input-label" %>
          <%= f.text_field :github_profile, :class => "input-field" %>
        </div>
        <div class="field">
          <%= f.label "Twitter Handle", :class => "input-label" %>
          <%= f.text_field :twitter, :class => "input-field" %>
        </div>
        <div class="field">
          <%= f.label "Slack Handle", :class => "input-label" %>
          <%= f.text_field :slack_handle, :class => "input-field" %>
        </div>
        <div class="field">
          <%= f.label "Linked In", :class => "input-label" %>
          <%= f.text_field :linked_in, :class => "input-field" %>
        </div>
        <div class="field">
          <%= f.label :website , :class => "input-label"%>
          <%= f.text_field :website, :class => "input-field" %>
        </div>
        <div class="field">
          <%= f.label :blog, :class => "input-label" %>
          <%= f.text_field :blog, :class => "input-field" %>
        </div>
    </div>
    <div class="col-xs-1"></div>
    <div class="col-md-2">
        <%= f.label :uploaded_file, :class => "uploaded"  %>
        <%= f.file_field :uploaded_file %>
    </div>
    <div class="col-xs-1"></div>
  </div>

  <div class = "row">
    <div class="col-md-2"></div>
    <div class="col-md-6">
      <div class="field ctr">
        <%= f.label :get_job_email, :class => "", :value => 'Would you like to receive email notifications for job posts?'%></br>
      </div>
      <div class="field ctr">
        <%= f.label :get_reseource_email, :class => "", :value => 'Would you like to receive email notifications for resources?'%></br>
      </div>
      <div class="field ctr">
        <%= f.label :get_event_email, :class => "", :value => 'Would you like to receive email notifications for events?'%></br>
      </div>
      <div class="field ctr">
        <%= f.label :campus_notification_id, :class => "", :value => 'Which campus?'%>
      </div>
      <div class="field ctr">
        <%= f.label :get_event_email, :class => "", :value => 'Would you like to receive email notifications when other users comment on your events and resources?'%>
      </div>
      <div class="field ctr">
        <%= f.label :looking, :class => "", :value => 'Are you looking for a new job?'%>
      </div>
      <div class="field ctr">
        <%= f.label :hiring, :class => "radio-title", :value => 'Is your company hiring?' %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="field ctr">
        Yes <%= f.radio_button :get_job_email, true %>
        No <%= f.radio_button :get_job_email, false %>
      </div>
      <div class="field ctr spacing-profile">
        Yes <%= f.radio_button :get_resource_email, true %>
        No <%= f.radio_button :get_resource_email, false %>
      </div>
      <div class="field ctr spacing-profile">
        Yes <%= f.radio_button :get_event_email, true %>
        No <%= f.radio_button :get_event_email, false %>
      </div>
      <div class="field ctr">
        <%= f.collection_select(:campus_notification_id, Campus.all, :id, :long_name, prompt: "") %>
      </div>
      <div class="field ctr spacing-profile">
        Yes <%= f.radio_button :get_comment_email, true %>
        No <%= f.radio_button :get_comment_email, false %>
      </div>
      <div class="field ctr spacing-profile">
        Yes<%= f.radio_button :looking, true %>
        No<%= f.radio_button :looking, false %>
      </div>
      <div class="field ctr spacing-profile">
        Yes<%= f.radio_button :hiring, true %>
        No<%= f.radio_button :hiring, false %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>

  
  <div class="row">
    <div class="col-md-5"></div>
    <div class="col-md-2 actions field">
      <%= f.submit :class=> "btn btn-profile btn-center", :value => 'Submit'%>
    </div>
    <div class="col-md-5"></div>
  </div>
  
  <% end %>
</div>
