<div class="logo-cont">
   <%= image_tag "people1.png", :id => "bg", alt: "", :class=> "background-image" %>

    <div class = "login-box">
        <h2 class = "login-page">Log in to your account</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <!--<%= f.label :email, :class => "login-page" %><br />-->
            <%= f.email_field :email, autofocus: true, :class => "input-field-login login-page", :placeholder => "Email" %>
          </div>

          <br/>

          <div class="field">
            <!--<%= f.label :password, :class => "login-page" %><br />-->
            <%= f.password_field :password, autocomplete: "off", :class => "input-field-login login-page", :placeholder => "Password" %>
          </div>


          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <br/>

          <div class="actions">
            <%= f.submit "Submit", :class => "btn-login" %>
          </div>
        <% end %>

        <br/>
        <br/>


    </div>

       <div class = "forgot-password">
         <%= render "devise/shared/links" %>
       </div>
    <br/>
</div>
