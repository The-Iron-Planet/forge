<div class = "login-box">
  <h2 class = "login-page">Change Your Password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <% if @minimum_password_length %>
      New Password <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off",
          class: "input-field-login login-page", placeholder: "Password" %>
    </div> <br />

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off",
          class: "input-field-login login-page", placeholder: "Confirm Passwor" %>
    </div><br />

    <div class="actions">
      <%= f.submit "Change my password", :class => "btn-login" %>
    </div>
  <% end %>
  <br/>
  <br/>

</div>
