<!DOCTYPE html>
<html>

<head>
  <title>Forge</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
      <%= csrf_meta_tags %>
</head>

<body>


  <div class="fixed-nav-bar">
    <div class="logo-cont">
      <%= link_to image_tag("TIY-logo-500px.png", alt: "logo", class: "tiy"), root_path %>
    </div>
    <% if user_signed_in? %>
      <div class="nav-links">
        <%= link_to 'Home', root_path, class: "nav" %>
        <%= link_to 'Alumni Directory', users_path, class: "nav" %>
        <% if current_user.is_cd %>
        <div class = "admin-header nav">
          <div class="dropdown">
            <div class="dropdown-toggle" type="text"
            id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="true">
            Admin
            <span class="caret"></span>
            </div>
          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
            <li><%= link_to 'New User', new_user_path, class: "nav" %></li>
            <li><%= link_to 'New Campus', new_campus_path, class: "nav" %></li>
            <li><%= link_to 'New Course', new_course_path, class: "nav" %></li>
            <li><%= link_to 'New Curriculum', new_curriculum_path, class: "nav" %></li>
          </ul>
        </div>
      </div>  
        
        
      </div>
      
     
      <!-- Add divs between here and END on line 26 to make the Admin links show up as drop down -->
        <!--<%= link_to 'New User', new_user_path, class: "nav" %>
        <%= link_to 'New Campus', new_campus_path, class: "nav" %>
        <%= link_to 'New Course', new_course_path, class: "nav" %>
        <%= link_to 'New Curriculum', new_curriculum_path, class: "nav" %>-->
      <!-- Add divs between here and IF on line 21 to make the Admin links show up as drop down -->
      <% end %>
      <div class = "header-text">
        <div class="dropdown">
          <button class="btn btn-default dropdown-toggle" type="button"
            id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="true">
            <%= current_user.first_name%>
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
            <li><%= link_to 'View Profile', user_path(current_user) %></li>
            <li><a href="#">Another action</a></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class=>"logout" %></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
  <div class="top-header">
     <p class="notice"><%= notice %></p>
    <%= yield %>
  </div>
</body>

</html>
