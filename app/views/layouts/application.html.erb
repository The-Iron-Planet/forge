<!DOCTYPE html>
<html>

<head>
  <title>Forge</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
      <%= csrf_meta_tags %>
</head>

<body>

  <div class="container-fluid">
    <div class="row">


    <div class="fixed-nav-bar">
      <div class="logo-cont">
        <div class="logo">
          <div class="logo2">
            <em class="the">The</em>
            <p class="forge">
              Forge
            </p>
          </div>
        </div>
      </div>

      <div >
        <span class="notice-header">
        <p class="notice">
          <%= notice %>
        </p>
        <p class="alert">
          <%= alert %>
        </p>
        </span>
        <% if user_signed_in? %>
          <div class="header-text">
            Signed in as
            <%= current_user.first_name%> |
              <span>
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class=>"btn logout" %>
              </span>
          </div>
          <% end %>
      </div>
    </div>
    </div>
  </div>
  <div class="top-header">


  <%= yield %>
</div>
</body>

</html>
