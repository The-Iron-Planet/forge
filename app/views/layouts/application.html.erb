<!DOCTYPE html>
<html>

<head>
  <title>Forge</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
      <%= csrf_meta_tags %>
</head>

<body>
      <div class="fixed-nav-bar">
        <div class="logo-cont">
          <%= image_tag "TIY-logo-vector-color.png", alt: "logo", class: "tiy" %>
        </div>
          <% if user_signed_in? %>
        <div class="nav-links">
          <%= link_to 'View Profile', (@user), :class=>"nav" %>
          <%= link_to 'Alumni Directory', users_path, :class=>"nav" %>
        </div>
        <div class = "header-text">
          Signed in as <%= current_user.first_name%> |
          <div class = "logout-btn"> <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class=>"logout" %> </div>
        </div>
          <% end %>
      </div>


    <div class="top-header">
       <p class="notice"><%= notice %></p>
      <%= yield %>
    </div>
</body>

</html>
