<p id="notice"><%= notice %></p>

<h1>Listing Positions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Company</th>
      <th>City</th>
      <th>State</th>
      <th>Title</th>
      <th>Description</th>
      <th>Started on</th>
      <th>Ended on</th>
      <th>Current</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.user_id %></td>
        <td><%= position.company_id %></td>
        <td><%= position.city %></td>
        <td><%= position.state %></td>
        <td><%= position.title %></td>
        <td><%= position.description %></td>
        <td><%= position.started_on %></td>
        <td><%= position.ended_on %></td>
        <td><%= position.current %></td>
        <td><%= link_to 'Show', position %></td>
        <td><%= link_to 'Edit', edit_position_path(position) %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

