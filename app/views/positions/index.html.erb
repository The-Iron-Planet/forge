<h2><%= "#{current_user.full_name}'s" %> Work Experience</h2>
<div class = "container-fluid">
  <div class = "row">
    <div class = "col-md-3"></div>
    <div class = "col-md-6">
      <table class = "table table-condensed">
        <thead>
          <tr>
            <th>Company</th>
            <th>Location</th>
            <th>Title</th>
            <th>Started on</th>
            <th>Ended on</th>
            <th>Current</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @positions.each do |position| %>
            <tr>
      
              <td><%= position.company_name %></td>
              <td><%= position.city %>, <%= position.state %></td>
              <td><%= position.title %></td>
              <td><%= position.started_on %></td>
              <td><%= position.ended_on %></td>
              <td><%= position.current %></td>
              <td><%= link_to 'Edit', edit_position_path(position) %></td>
              <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class = "col-md-3"></div>
  </div>


<%= link_to 'New Position', new_position_path %>
</div>