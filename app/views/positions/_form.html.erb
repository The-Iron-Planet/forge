<%= form_for(@position) do |f| %>
  <div class="row form-val">
    <%= render "shared/error_messages", :target => @position %>
  </div>
  <div class="field">
    <%= f.label :title, :class => "input-label"%><br>
    <%= f.text_field :title, :class => "input-field" %>
  </div>
  <div class="field">
    <%= f.label :company_name, :class => "input-label" %><br>
    <%= f.text_field :company_name, :class => "company_name" %>
  </div>
  <div class="field">
    <%= f.label :city, :class => "input-label" %><br>
    <%= f.text_field :city, :class => "city" %>
  </div>
  <div class="field">
    <%= f.label :state, :class => "input-label" %><br>
    <%= f.select :state, options_for_select(us_states, f.object.state), :include_blank => true, :class => "input-field" %>
  </div>
  <div class="field">
    <%= f.label :started_on, :class => "input-label" %><br>
    <%= f.date_field :started_on, :class => "input-field" %>
  </div>
  <div class="field">
    <%= f.label :ended_on, :class => "input-label" %><br>
    <%= f.date_field :ended_on, :class => "input-field" %>
  </div>
  <div class="actions">
    <%= f.submit :class=> "btn", :value => 'Save New Position'%>
  </div>
<% end %>
