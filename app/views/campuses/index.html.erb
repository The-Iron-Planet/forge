<h2>TIY Campus Listing</h2>
<div class="container-fluid" >
  <div class="row">

<div class="col-md-4"></div>
<div class="col-md-4">
<div class = "table-responsive">
  <table class = "table table-condensed">
  <thead>
    <tr>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campuses.each do |campus| %>
      <tr>
        <td><%= campus.city %></td>
        <td><%= campus.state %></td>
        <!-- <td><%= link_to 'Show', campus %></td> -->        
        <td><%= link_to "Edit", "mobile-friendly-page.html", "data-mfp-src" => "#edit-campus#{campus.id}", class: "open-popup-link edit-campus" %>
          <div id='edit-campus<%="#{campus.id}" %>' class="white-popup mfp-hide">
            <h2>Edit Campus</h2>
            <%= render partial: 'edit_form', locals: { campus: campus } %>
          </div>
        <!--<td><%= link_to 'Edit', edit_campus_path(campus) %></td>-->
        <td><%= link_to 'Delete', campus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<div class="col-md-4"></div>
</div>
<br>

