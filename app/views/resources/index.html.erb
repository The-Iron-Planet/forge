<div class="container-fluid">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <h2 class = "resources-head-text">Resources</h2>
        <%= link_to new_resource_path, :class=>"btn-add-record-long-resources" do %>
          <span class = "fa fa-plus fa-lg"></span>
        <% end %>
        <div class="well">
          <%= form_tag search_resources_path, remote: true do %>
          <%= text_field_tag "query", params[:query], class: "general-search-resources", placeholder: "Search"%>
          <%= button_tag "", type: "submit", class: "glyphicon glyphicon-search search-button" %>
          <% end %>
        </div>
        <div id="resource-list">
            <%= render "resource_list" %>
        </div>

    </div>
    <div class="col-md-1"></div>
  </div>
</div>
